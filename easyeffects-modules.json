                "-Dgstreamer=disabled",
                "-Dman=disabled",
                "-Dsystemd=disabled",
                "-Dudev=disabled",
                "-Dudevrulesdir=disabled",
                "-Dsession-managers=[]",
                "-Djack=enabled"
